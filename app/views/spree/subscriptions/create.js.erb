<% flash[:notice] = nil %>

var modal_opts = { closeHTML : '<div>[x] CLOSE</div>', 

      containerCss : { height:80 },

      onOpen: function (dialog) {
                        dialog.overlay.fadeIn('fast', function() {
                            dialog.data.show();
                            dialog.container.fadeIn('fast');
                        });
              }
    };

<% if @errors.empty? %>
    $("#subscription-modal-notice").html(' <%= t("you_have_been_subscribed") %>').modal();

<% else %>
  $("#subscription-modal-notice").html(' <%= @errors.join(' / ') %>').modal();

<% end %>

